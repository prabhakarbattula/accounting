<h1>Ledger Details</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Ledger</th>
      <th>Debit</th>
      <th>Credit</th>
      <th>Amount</th>      
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |credit| %>
      <tr>
        <td><%= credit.date %></td>
        <td><%= credit.ledger.name%></td>
        <td><%= credit.debit_or_credit %></td>
        <td><%= credit.amount %></td>      
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Transaction', new_cashbook_path %>
