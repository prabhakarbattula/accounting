<h3><%= @credit_transactions.first.credit.name %> Ledger Details</h3>


<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Date</th>
      <th>Ledger</th>
      
      <th>Credit</th>
      <th>Total</th>      
    </tr>
  </thead>
<% @zero = 0 %> 
  <tbody>
    <% @credit_transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.date %></td>
        
        <td><%= Debit.find(transaction.debit_id).name %></td>
        <td align="right"><%= transaction.amount %></td>      
        <td align="right"> <%= @total = @zero += transaction.amount %> </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%#= @total %>
<br>

<%= link_to 'back', cashbooks_path, class: "btn btn-mini btn-primary active" %>
