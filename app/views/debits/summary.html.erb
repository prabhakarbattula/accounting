<h1>Ledger Details</h1>

<%= link_to 'New Transaction', new_cashbook_path, class: "btn btn-mini btn-success active" %>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Date</th>
      <th>Ledger</th>
      <th>Debit</th>
      <th>Credit</th>
      <th>Amount</th>      
    </tr>
  </thead>

  <tbody>
    <% @transactions_debit.each do |transaction| %>
      <tr>
        <td><%= transaction.date.strftime("%d-%b-%Y") %></td>
        <td><%= transaction.debit.name%></td>
        <td><%= transaction.credit.name %></td>
        <td><%= transaction.amount %></td>      
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>


