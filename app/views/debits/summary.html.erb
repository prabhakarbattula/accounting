<h1>Ledger Details</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Ledger</th>
      <th>Debit</th>
      <th>Credit</th>
      <th>Amount</th>      
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.date %></td>
        <td><%= transaction.debit.name%></td>
        <td><%= transaction.credit.name %></td>
        <td><%= transaction.amount %></td>      
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Transaction', new_cashbook_path %>
