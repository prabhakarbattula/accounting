<h1>Listing debits</h1>

<%= link_to 'New Debit', new_debit_path, class: "btn btn-mini btn-success active"%>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @debits.each do |debit| %>
      <tr>
        <td><%= debit.name %></td>
        <td><%= link_to 'Show', debit %></td>
        <td><%= link_to 'Edit', edit_debit_path(debit) %></td>
        <td><%= link_to 'Destroy', debit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


