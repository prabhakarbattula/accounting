<h3> Cashbook

<%= link_to 'New Transaction', new_cashbook_path, class: "btn btn-mini btn-success active" %> </h3>

Opening Balance as on : <%= @cashbooks.first.created_at %>  is Rs.<%= @opening_balance.to_d %> <hr>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Date</th>      
      <th>Credit</th>
      <th>Amount</th>
      <th>Balance</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @cashbooks.each do |cashbook| %>
      <tr>
        <td><%= cashbook.date %></td>
        <%#= link_to cashbook.debit.name, debit_summary_path(:debit_id => cashbook.debit_id) %>
        <td> <%= link_to Credit.find(cashbook.credit_id).name, credit_summary_path(:credit_id => cashbook.credit_id) %> </td>
        <td align="right"><%= cashbook.amount.to_d %></td>
        <td align="right">  
            <%= @opening_balance -= cashbook.amount.to_d %> 
        </td>  
        <td><%= link_to 'Show', cashbook, class: "btn btn-mini btn-info active" %></td>
        <td><%= link_to 'Edit', edit_cashbook_path(cashbook), class: "btn btn-mini btn-warning active" %></td>
        <td><%= link_to 'Destroy', cashbook, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-mini btn-danger active" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

